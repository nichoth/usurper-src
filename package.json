{
  "browserify": {
    "transform": [
      "brfs"
    ]
  },
  "scripts": {
    "build-js": "npm run build-main && npm run build-sw",
    "build-sw": "browserify -d browser/sw.js > public/sw.js",
    "build-main": "browserify -d browser/main.js > public/main.js",
    "watch-js": "npm run watch-main & npm run watch-sw",
    "watch-main": "watchify browser/main.js -o public/main.js -dv",
    "watch-sw": "watchify browser/sw.js -o public/sw.js -dv",
    "dev": "npm run watch-sass & npm run watch-js & npm start",
    "watch-sass": "sass --watch style/main.scss:public/style.css",
    "start": "node server.js"
  },
  "devDependencies": {
    "brfs": "^1.4.0",
    "ecstatic": "^0.8.0",
    "hyperstream": "^1.2.2"
  },
  "dependencies": {
    "catch-links": "^2.0.0",
    "domify": "^1.3.3",
    "es6-promise": "^2.3.0",
    "raf-scroll": "^1.1.0",
    "scrolltop": "0.0.1",
    "serviceworker-cache-polyfill": "^3.0.0",
    "single-page": "^1.0.0",
    "sw-register": "0.0.0",
    "whatwg-fetch": "^0.9.0"
  }
}
